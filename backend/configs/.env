# Application Configuration (Non-sensitive)
APP_ENV=dev
APP_NAME=expense-tracker
LOG_LEVEL=INFO
LOG_DIRECTORY=logs
LOG_NAME=expense-tracker.log
LOG_MAX_BYTES=10485760

# Database Configuration
# Database connection details are stored in configs/secrets/.env
# For local development with Cloud SQL Proxy, change DB_HOST to localhost in secrets/.env
# and start the proxy: ./cloud-sql-proxy expense-tracker-470706:us-central1:expense-tracker-db --port=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Gmail API Configuration (Non-sensitive)
GOOGLE_REDIRECT_URI=http://localhost:8000/api/mail/oauth/callback
GOOGLE_CLIENT_SECRET_FILE=configs/secrets/client_secret.json

# Google Cloud Storage Configuration (Non-sensitive)
GOOGLE_CLOUD_PROJECT_ID=expense-tracker-470706
GOOGLE_CLOUD_BUCKET_NAME=marty-the-expense-tracker

# Splitwise API Configuration (Non-sensitive)
SPLITWISE_API_BASE_URL=https://secure.splitwise.com/api/v3.0

# Statement Processing Configuration
ENABLE_SECONDARY_ACCOUNT=true

# Note: Sensitive credentials are stored in configs/secrets/.env
# This includes: DB_HOST, DB_PORT, DB_NAME, DB_USER, DB_PASSWORD, OPENAI_API_KEY, 
# GOOGLE_REFRESH_TOKEN, GOOGLE_APPLICATION_CREDENTIALS, SENTRY_DSN, 
# SPLITWISE_CONSUMER_KEY, SPLITWISE_CONSUMER_SECRET


